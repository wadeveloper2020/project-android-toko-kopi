<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#81B6D6"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toko Kopi"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        />

    <RelativeLayout
        android:id="@+id/rellayTop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:paddingTop="5dp"
        android:background="#3A87D3"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Total Harga"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:textColor="#E9F7EF"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.0"
            android:textColor="#EEF2F7"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/rellayTop"
        >

        <TextView
            android:id="@+id/hkopi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kopi Aceh \n Rp.20.000"
            android:textColor="#262729"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/tambah1"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-99dp"
            android:layout_toStartOf="@+id/harga"
            android:onClick="tambah1"
            android:paddingStart="20dp"
            android:background="#8CDD2E"
            android:text="+"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/harga"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="66dp"
            android:gravity="center"
            android:hint="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/kurang1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/harga"
            android:onClick="kurang1"
            android:paddingStart="20dp"
            android:background="#C22B20"
            android:text="-"
            android:textSize="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/harga"
            android:layout_marginTop="20dp"
            android:text="Kopi Kalimantan \n Rp.20.000"
            android:textColor="#262729"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/kurang2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/harga1"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-54dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/harga"
            android:onClick="kurang2"
            android:paddingStart="20dp"
            android:text="-"
            android:background="#C22B20"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/harga1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/harga"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="64dp"
            android:gravity="center"
            android:hint="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/tambah2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/harga1"
            android:layout_alignParentTop="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="-95dp"
            android:layout_toStartOf="@+id/harga"
            android:onClick="tambah2"
            android:paddingStart="20dp"
            android:background="#8CDD2E"
            android:text="+"
            android:textSize="30dp" />


        <Button
            android:id="@+id/hitung1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/harga"
            android:layout_marginTop="97dp"
            android:background="#CDDC39"
            android:onClick="hitungtotal"
            android:text="HITUNG HARGA"
            android:textSize="20dp"
            android:textColor="#123456" />


    </RelativeLayout>





</RelativeLayout>